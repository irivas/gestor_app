    <div id="error_explanation">
      <h2><%= pluralize(@user_competence.errors.count, "error") %> prohibited this competence from being saved:</h2>

      <ul>
      <% @user_competence.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Competence" %>
    <%= select(:user_competence, :competence_id, @competences.collect {|c| [ c.name, c.id ] }, { :prompt => 'Select competence' }) %>
    <%  %>
